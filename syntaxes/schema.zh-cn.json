                        "$ref": "#/$defs/EmmyrcNonStdSymbol"
                    }
                },
                "requireLikeFunction": {
                    "description": "类似 require 的函数列表。",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "requirePattern": {
                    "description": "require 模式。例如：\"?.lua\", \"?/init.lua\"",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "special": {
                    "description": "Special symbols.",
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/EmmyrcSpecialSymbol"
                    },
                    "default": {}
                },
                "version": {
                    "description": "Lua 版本。",
                    "$ref": "#/$defs/EmmyrcLuaVersion",
