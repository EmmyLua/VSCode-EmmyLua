                "ignoreGlobs": {
                    "description": "忽略的文件。例如：[\"**/*.lua\"]",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "library": {
                    "description": "库路径。例如：\"/usr/local/share/lua/5.1\"",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "moduleMap": {
                    "description": "模块映射列表。key 是正则表达式，value 是新的模块正则表达式\n 例如：{\n    \"^(.*)$\": \"module_$1\"\n    \"^lib(.*)$\": \"script$1\"\n}",
                    "type": "array",
                    "default": [],
                    "items": {
                        "$ref": "#/$defs/EmmyrcWorkspaceModuleMap"
                    }
