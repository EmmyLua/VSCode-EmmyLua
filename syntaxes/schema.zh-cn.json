                "preloadFileSize": {
                    "type": "integer",
                    "format": "int32",
                    "default": 0
                },
                "reindexDuration": {
                    "description": "当保存文件时，ls 将在指定毫秒后重新索引工作区。",
                    "type": "integer",
                    "format": "uint64",
                    "default": 5000,
                    "minimum": 0,
                    "x-vscode-setting": true
                },
                "workspaceRoots": {
                    "description": "工作区根目录列表。例如：[\"src\", \"test\"]",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "EmmyrcWorkspaceModuleMap": {
            "type": "object",
            "properties": {
                "pattern": {
                    "type": "string"
