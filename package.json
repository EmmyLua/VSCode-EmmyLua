{
    "name": "emmylua",
    "displayName": "EmmyLua",
    "description": "EmmyLua plugin for vscode",
    "version": "0.0.3",
    "publisher": "tangzx",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "activationEvents": [
        "onLanguage:lua",
        "onDebug"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/EmmyLua/VSCode-EmmyLua"
    },
    "bugs": {
        "url": "https://github.com/EmmyLua/VSCode-EmmyLua/issues"
    },
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "emmy.restartServer",
                "title": "EmmyLua: Restart Lua Server"
            }
        ],
        "languages": [
            {
                "id": "lua",
                "extensions": [
                    ".lua"
                ],
                "aliases": [
                    "EmmyLua"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lua",
                "scopeName": "source.lua",
                "path": "./syntaxes/lua.tmLanguage.json"
            }
        ],
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "emmylua_attach",
                "label": "EmmyLua Attach Debug",
                "program": "./out/debugger/AttachDebugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "pid"
                        ],
                        "properties": {
                            "pid": {
                                "type": "number",
                                "description": "%debug.attach.target_pid%",
                                "default": 0
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "emmylua_attach",
                        "request": "attach",
                        "name": "%debug.attach.name%",
                        "pid": 0
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "%debug.attach.label%",
                        "description": "%debug.attach.desc%",
                        "body": {
                            "type": "emmylua_attach",
                            "request": "attach",
                            "name": "%debug.attach.name%",
                            "pid": 0
                        }
                    }
                ],
                "languages": [
                    "lua"
                ]
            },
            
            {
                "type": "emmylua_launch",
                "label": "EmmyLua Launch Debug",
                "program": "./out/debugger/AttachDebugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "启动程序",
                                "default": "lua.exe"
                            },
                            "workingDir": {
                                "type": "string",
                                "description": "工作目录",
                                "default": ""
                            },
                            "arguments": {
                                "type": "array",
                                "description": "运行参数",
                                "default": "[]"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "emmylua_launch",
                        "request": "launch",
                        "name": "%debug.launch.name%",
                        "program": "lua.exe",
                        "workingDir": "workingDir"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "%debug.launch.label%",
                        "description": "%debug.launch.desc%",
                        "body": {
                            "type": "emmylua_launch",
                            "request": "launch",
                            "name": "%debug.launch.name%",
                            "program": "lua.exe",
                            "workingDir": "workingDir"
                        }
                    }
                ],
                "languages": [
                    "lua"
                ]
            }
        ],
        "configuration": {
            "title": "EmmyLua",
            "properties": {
                "emmylua.java.home": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specifies the path to the java home"
                },
                "emmylua.source.roots": {
                    "type": [
                        "array"
                    ],
                    "default": null,
                    "description": "Source roots of your project"
                },
                "emmylua.completion.caseSensitive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Case sensitive completion"
                },
                "emmylua.colors.parameter": {
                    "type": "string",
                    "default": "#99FFCC"
                },
                "emmylua.colors.global": {
                    "type": "string",
                    "default": "#FF6699"
                },
                "emmylua.colors.doc_type": {
                    "type": "string",
                    "default": "#66CCFF"
                }
            }
        },
        "configurationDefaults": {
            "[lua]": {
                "editor.quickSuggestions": {
                    "other": true,
                    "comments": true,
                    "strings": false
                }
            }
        },
        "colors": []
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0"
    },
    "dependencies": {
        "vscode-languageclient": "^3.3.0",
        "vscode-debugadapter": "1.27.0",
        "vscode-debugprotocol": "1.27.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "smart-buffer": "^4.0.1",
        "xml2js": "^0.4.19"
    }
}
